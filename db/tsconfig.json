{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true
  },

  "exclude": ["node_modules", "dist"]
}
